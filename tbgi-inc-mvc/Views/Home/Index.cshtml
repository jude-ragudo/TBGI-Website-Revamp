                window.location.href = '@Url.Action("Index","PortalRegistration")';
        });
        //END INQUIRE BTNS
        //Link to pricing and Plans
        accessPlanBtns.forEach(function (button) {
            button.addEventListener("click", function () {
                 window.location.href = '@Url.Action("Index","PricingAndPlans")';
            });
        });
        //End Pricing and plans
        //Link to Login
        rtPaymentBtn.addEventListener("click", function () {
                window.location.href = '@Url.Action("Index","LoginA")';
        });
        //End login
        //Link to products
        parallaxBtn.addEventListener("click", function () {
                window.location.href = '@Url.Action("Products","Home")';
        });
        //end products
    </script>
}