        const accessPlanBtns = document.querySelectorAll('.btn');
        //Login
        const rtPaymentBtn = document.querySelector('.-readMore1');
        //Products
        const parallaxBtn = document.querySelector('.-readMore2');
        //INQUIRE BTNS
        inquireBtns.forEach(function (button) {
